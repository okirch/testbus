
<service name="host" interface="org.opensuse.Testbus.Host" object-class="host">
  <define name="properties" class="dict">
    <name type="string" />
    <uuid type="uuid-type" />
    <owner type="string" />
  </define>

  <method name="run">
    <arguments>
      <!-- This is really an object-path of a Testbus.Command object: -->
      <command type="string" />
    </arguments>
  </method>

</service>

<service name="hostlist" interface="org.opensuse.Testbus.Hostlist" object-class="hostlist">
  <method name="createHost">
    <arguments>
      <name type="string" />
    </arguments>
    <result>
      <retval type="string" />
    </result>
  </method>

  <method name="removeHost">
    <arguments>
      <name type="string" />
    </arguments>
    <result>
      <retval type="boolean" />
    </result>
  </method>

  <method name="reconnect">
    <arguments>
      <name type="string" />
      <uuid type="uuid-type" />
    </arguments>
  </method>
</service>
