
<service name="fileset" interface="org.opensuse.Testbus.Fileset">
  <method name="createFile">
    <arguments>
      <name type="string" />
      <mode type="uint32" />
    </arguments>
    <result>
      <object-path type="string" />
    </result>
  </method>
</service>

<service name="file" interface="org.opensuse.Testbus.Tmpfile" object-class="file">
  <define name="properties" class="dict">
    <name type="string" />
    <size type="uint64" />
  </define>

  <method name="append">
    <arguments>
      <data class="array" element-type="byte" />
    </arguments>
  </method>

  <method name="retrieve">
    <arguments>
      <offset type="uint64" />
      <count type="uint32" />
    </arguments>
    <result>
      <data class="array" element-type="byte" />
    </result>
  </method>

  <signal name="deleted" />
</service>
